{
    "version": "1.8.10",
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": "src/",
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "noResolve": true,
        "removeComments": false,
        "noLib": false
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./test/**/*.ts",
        "./typings/main.d.ts",
        "./custom_typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}
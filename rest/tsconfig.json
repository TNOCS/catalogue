{
    "version": "1.8.10",
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "noResolve": true,
        "removeComments": false,
        "noLib": false
    },
    "filesGlob": [
        "./**/*.ts",
        "./typings/main.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}